<div>
    <p class="text-center" style="font-size:150%">Upload my phone book file </p>
    {{ form_start(uploadFileForm, {'method': 'POST', 'action' : url('source_upload'), 'role': 'form', 'attr' : {'class':'form-horizontal' } } ) }}

    {{ form_errors(uploadFileForm) }}
    <div class="form-group col-sm-8">
        {{ form_row(uploadFileForm.fileToUpload) }}
        <p class="help-block">Your phone book has to be *.xml file.</p>
    </div>
    <div class="form-group col-sm-4" style="margin-top: 23px;float:right">
        <button type="submit" name="submit" class="btn btn-success" style="float:right">Upload</button>
    </div>
    {{ form_end(uploadFileForm) }}
</div>